x264:
./configure --disable-asm --enable-pic --enable-strip --enable-static --prefix=./build --libdir=/home/zzh/workspace/VideoChat/c/libs/linux --includedir=/home/zzh/workspace/VideoChat/c/include


cross:
./configure --disable-asm --enable-pic --enable-strip --enable-static --cross-prefix=$ANDROID_NDK/toolchains/arm-linux-androideabi-4.6/prebuilt/linux-x86_64/bin/arm-linux-androideabi- --sysroot=$ANDROID_NDK/platforms/android-21/arch-arm --host=arm-linux --prefix=./build --extra-cflags="-march=armv7-a -mtune=cortex-a8 -mfloat-abi=softfp -mfpu=neon -D__ARM_ARCH_7__ -D__ARM_ARCH_7A__" --libdir=/home/zzh/workspace/VideoChat/c/libs/android --includedir=/home/zzh/workspace/VideoChat/c/include


ffmpeg:
